{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true
  },
  "include": [
    "src/renderer/*.ts",
    "src/renderer/*.tsx",
    "src/renderer/**/*.ts",
    "src/renderer/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
