{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "module": "es2020",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true
  },
  "include": ["src/*.ts", "src/*.tsx", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
